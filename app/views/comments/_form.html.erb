<%= form_for([@post,@post.comments.build],class: "shadow p-3 mb-5 bg-info rounded",local: true) do |f| %>
<div class="form-group row">
  <%= f.label :response ,"Comment" , class: "col-2 col-form-label text-dark"%>
  <div class="col-10">
    <div class="row">
      <div class="col-10">
        <%= f.text_field :response ,rows: 10 ,class: "form-control shadow rounded" ,placeholder: "Comment here"%>
       </div>
       <div class="col-2">
        <%= f.button :submit ,class: "btn btn-info" %>
       </div>
     </div>
  </div>
</div>

<% end %>
