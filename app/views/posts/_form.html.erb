<div class="row justify-content-center mt-4">
  <div class="col-10">
    <%= render 'shared/errors', obj: @post %>
    <%= form_with(model: @post ,class: "shadow p-3 mb-5 bg-info rounded",local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :description , class: "col-2 col-form-label text-light"%>
        <div class="col-10">
        <%= f.text_area :description ,rows: 10 ,class: "form-control shadow rounded" ,placeholder: "Enter the description of post"%>
        </div>
      </div>
      <div class="form-group row justify-content-center">
       <%= f.submit class:"btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
  <%= link_to '[Cancel and Back to Posts Listing]',root_path ,class: "text-info"%>
</div>
